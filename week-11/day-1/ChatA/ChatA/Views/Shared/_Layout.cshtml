@using ChatA.Models;
@model ChatA.Models.ViewModels.IndexViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>ChatA</title>
    <link href="~/Styles/Styles.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/login">Click to login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/update">Update</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/user">Actual user</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled" href="/register" tabindex="-1" aria-disabled="true">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout actual user</a>
                    </li>
                </ul>
            </div>
            <div class="col">
                @if (!ViewBag.LoggedUser)
        {
                <div class="alert alert-warning" role="alert">
                    No logged user, please log in
                </div>
        }
        else
        {
                <div class="alert alert-light" role="alert">
                    Actual logged user nickname is @Model.MyLoggedUser.UserName
                <img src="@Model.MyLoggedUser.AvatarUrl" class="float-right" alt="User avatar" width="50">
                </div>
        }
            </div>
        </div>
        <h1>Latest Chat Ever</h1>
        @RenderBody()
    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
</body>
</html>