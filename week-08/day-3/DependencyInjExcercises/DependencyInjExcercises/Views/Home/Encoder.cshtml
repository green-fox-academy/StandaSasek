<head>
    <title>This is really useful</title>
</head>
<body>
    @Html.Partial("_Menu")

    <form action="~/useful/encoder" method="GET">
        <div>
            <label>Caesar - enter text to encode</label>
            <input type="text" name="word" id="encoder">
            <label>Enter positive integer as a key</label>
